<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="216dp"
    android:orientation="vertical">
    <LinearLayout android:id="@+id/headerbar"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal"
        android:background="#2196F3">
        <TextView android:id="@+id/txtCity"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Amman, Jordan"
            android:textColor="#E3F2FD"
            android:layout_marginLeft="10dp"
            android:gravity="fill_vertical"
            android:textSize="16sp"
            android:fontFamily="sans-serif-thin" />
    </LinearLayout>
    <RelativeLayout android:id="@+id/contentbar"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_below="@id/headerbar"
        android:background="#90CAF9"
        android:gravity="center_horizontal">
        <ImageView android:id="@+id/imgWeather"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_launcher"
            android:layout_marginRight="20dp" />
        <TextView android:id="@+id/txtDegree"
            android:layout_toRightOf="@id/imgWeather"
            android:layout_width="wrap_content"
            android:text="39Â°"
            android:textColor="#E3F2FD"
            android:textSize="64sp"
            android:gravity="fill_vertical"
            android:fontFamily="sans-serif-thin"
            android:layout_height="70dp" />
        <TextView android:id="@+id/txtType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hot"
            android:textColor="#E3F2FD"
            android:textSize="16sp"
            android:fontFamily="sans-serif-thin"
            android:layout_below="@+id/txtDegree"
            android:layout_toRightOf="@+id/imgWeather"
            android:layout_marginTop="-5dp" />
    </RelativeLayout>
    <RelativeLayout android:id="@+id/footerbar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/contentbar"
        android:background="#E3F2FD"
        android:gravity="center_horizontal">
        <TextView android:id="@+id/txtHour"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="10"
            android:textColor="#000"
            android:textSize="54sp"
            android:gravity="fill_vertical"
            android:fontFamily="sans-serif" />
        <TextView android:id="@+id/txtMinute"
            android:layout_toRightOf="@id/txtHour"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=":59"
            android:textColor="#000"
            android:textSize="54sp"
            android:gravity="fill_vertical"
            android:fontFamily="sans-serif-thin" />
        <TextView android:id="@+id/txtTimeUp"
            android:layout_toRightOf="@id/txtMinute"
            android:layout_width="wrap_content"
            android:layout_height="54sp"
            android:text="PM"
            android:textColor="#000"
            android:textSize="16sp"
            android:gravity="fill_vertical"
            android:fontFamily="sans-serif-thin" />
        <TextView android:id="@+id/txtDate"
            android:layout_alignParentBottom="true"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="MON NOV 17"
            android:textColor="#000"
            android:textSize="16sp"
            android:fontFamily="sans-serif-thin"
            android:gravity="center_horizontal" />
    </RelativeLayout>
    <ImageButton
        android:id="@+id/fab"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/buttonripple"
        android:src="@android:drawable/ic_input_add"
        android:elevation="4dp"
        android:layout_marginRight="40dp" />
</RelativeLayout>